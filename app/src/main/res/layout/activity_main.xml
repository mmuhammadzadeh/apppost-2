<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F23"
    tools:context=".MainActivity">

    <!-- هدر حرفه‌ای -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- آواتار کاربر -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatar_container"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#6C5CE7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/avatar_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </com.google.android.material.card.MaterialCardView>

            <!-- اطلاعات کاربر -->
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="خوش آمدید"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:textDirection="rtl"
                app:layout_constraintTop_toTopOf="@+id/avatar_container"
                app:layout_constraintStart_toEndOf="@+id/avatar_container"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="مدیر سیستم"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textDirection="rtl"
                app:layout_constraintTop_toBottomOf="@+id/welcome_text"
                app:layout_constraintStart_toEndOf="@+id/avatar_container"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/user_role_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="دسترسی کامل"
                android:textColor="#6C5CE7"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textDirection="rtl"
                app:layout_constraintTop_toBottomOf="@+id/user_name_text"
                app:layout_constraintStart_toEndOf="@+id/avatar_container"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- نشان‌گر آنلاین -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/online_indicator"
                app:layout_constraintTop_toTopOf="@+id/avatar_container"
                app:layout_constraintEnd_toEndOf="@+id/avatar_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- آمار سریع -->
    <LinearLayout
        android:id="@+id/stats_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/header_card">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1E1E1E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/total_users_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#6C5CE7"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کل کاربران"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:textDirection="rtl" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1E1E1E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/online_users_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#00BCD4"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آنلاین"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:textDirection="rtl" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- پنل مدیریت اصلی -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/admin_panel_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#1E1E1E"
        app:layout_constraintTop_toBottomOf="@+id/stats_layout"
        app:layout_constraintBottom_toTopOf="@+id/bottom_actions_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- تب‌ها - TabItem ها حذف شده‌اند -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/admin_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabTextColor="#9E9E9E"
                app:tabSelectedTextColor="#6C5CE7"
                app:tabIndicatorColor="#6C5CE7"
                app:tabRippleColor="#6C5CE7"
                app:layout_constraintTop_toTopOf="parent">

                <!-- TabItem ها در اینجا حذف شده و باید در کد اضافه شوند -->

            </com.google.android.material.tabs.TabLayout>

            <!-- محتوای تب کاربران -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/users_tab_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/admin_tabs"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- دکمه اضافه کردن کاربر جدید -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_user_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="+ اضافه کردن کاربر جدید"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#6C5CE7"
                    app:cornerRadius="16dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="#FFFFFF"
                    android:textDirection="rtl"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- جستجوی کاربران -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/search_user_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="جستجوی کاربران..."
                    android:textColorHint="#9E9E9E"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"
                    app:boxStrokeColor="#6C5CE7"
                    app:hintTextColor="#6C5CE7"
                    app:layout_constraintTop_toBottomOf="@+id/add_user_button">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_user_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#FFFFFF"
                        android:textDirection="rtl"
                        android:layoutDirection="rtl" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- لیست کاربران -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/users_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/search_user_layout"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- محتوای تب اتصالات -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/connections_tab_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/admin_tabs"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="اتصالات اخیر وب‌سایت"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textDirection="rtl"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/connected_websites_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- محتوای تب تنظیمات -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/settings_tab_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/admin_tabs"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تنظیمات سیستم"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textDirection="rtl"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- تنظیمات مختلف -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/notifications_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="اعلان‌ها فعال"
                        android:textColor="#FFFFFF"
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        app:thumbTint="#6C5CE7"
                        app:trackTint="#9E9E9E"
                        android:padding="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/auto_backup_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="پشتیبان‌گیری خودکار"
                        android:textColor="#FFFFFF"
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        app:thumbTint="#6C5CE7"
                        app:trackTint="#9E9E9E"
                        android:padding="16dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- اکشن‌های پایین -->
    <LinearLayout
        android:id="@+id/bottom_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backup_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="پشتیبان"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00BCD4"
            app:cornerRadius="12dp"
            android:textDirection="rtl" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="خروج"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            app:cornerRadius="12dp"
            android:textDirection="rtl" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
